<div class="container">
  <h1>Create a new Lineup</h1>

  <form action="/lineups" method="POST">

    <label>Lineup Name:</label>
    <input type="text" name="name" id="name">
    <br></br>

    <label>Quarterback:</label>
    <input type="text" name="quarterback" id="quarterback">
    <br></br>

    <label>First Running Back:</label>
    <input type="text" name="runningback_one" id="runningback_one">
    <br></br>

    <label>Second Running Back:</label>
    <input type="text" name="runningback_two" id="runningback_two">
    <br></br>

    <label>First Wide Receiver:</label>
    <input type="text" name="widereceiver_one" id="widereceiver_one">
    <br></br>

    <label>Second Wide Receiver:</label>
    <input type="text" name="widereceiver_two" id="widereceiver_two">
    <br></br>

    <label>Third Wide Receiver:</label>
    <input type="text" name="widereceiver_three" id="widereceiver_three">
    <br></br>

    <label>Tightend:</label>
    <input type="text" name="tightend" id="tightend">
    <br></br>

    <label>Flex:</label>
    <input type="text" name="flex" id="flex">
    <br></br>

    <label>Defense:</label>
    <input type="text" name="defense" id="defense">
    <br></br>

    <input type="submit" value="create">
  </form>
</div>
